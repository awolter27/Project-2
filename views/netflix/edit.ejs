<%- include('../partials/header.ejs') %>

<h1>Edit <%= Netflix.name %></h1>
<form action="/netflix/<%= Netflix._id %>?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= Netflix.name %>">
    <label for="synopsis">Synopsis</label>
    <input type="text" name="synopsis" id="synopsis" value="<%= Netflix.synopsis %>">
    <label for="img">Image</label>
    <input type="text" name="img" id="img" value="<%= Netflix.img %>">
    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value="<%= Netflix.genre %>">
    <input type="submit" value="Edit TV Show">
</form>
<a href="/netflix">Back</a>

