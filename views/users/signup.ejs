<div class="newAccountContainer">
    <h1 class="newAccountTitle">Create a new account</h1>
    <a href="/login"><h3>Already have an account? Login</h3></a>
    <form class="createAccountForm" method="POST" action="/signup">
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" placeholder="something@email.com" required>
        <label for="username">Username:</label>
        <input type="text" name="username" id="username">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" required>
        <label for="passwordConfirm">Confirm Your Password:</label>
        <input type="password" name="passwordConfirm" id="passwordConfirm" required>
        <input type="submit" value="Create an account">
    </form>
</div>

