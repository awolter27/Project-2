<%- include('../partials/header.ejs') %>

<h1>Edit <%= Disney.name %></h1>
<form action="/disney/<%= Disney._id %>?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= Disney.name %>">
    <label for="synopsis">Synopsis</label>
    <input type="text" name="synopsis" id="synopsis" value="<%= Disney.synopsis %>">
    <label for="img">Image</label>
    <input type="text" name="img" id="img" value="<%= Disney.img %>">
    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value="<%= Disney.genre %>">
    <input type="submit" value="Edit TV Show">
</form>
<a href="/disney">Back</a>

