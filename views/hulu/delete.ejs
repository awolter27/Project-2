<%- include('../partials/header.ejs') %>

    <h1>Delete <%= Hulu.name %></h1>
    <p><%= Hulu.name %></p>
    <p><%= Hulu.synopsis %></p>
    <img src = <%= Hulu.img %> alt = 'show image'>
    <p><%= Hulu.genre %></p>
    <% for (let i = 0; i < Hulu.seasons.length; i++) { %>
        <p>Season <%= i + 1 %></p>
        <p><%= Hulu.seasons[i].year %></p>
        <% for (let j = 0; j < Hulu.seasons[i].episodes.length; j++) { %>
            <p><%= Hulu.seasons[i].episodes[j] %></p>
        <% } %>
    <% } %>
    <form method="POST" action="/hulu/<%= Hulu._id %>?_method=DELETE">
        <input type="submit" value="Delete <%= Hulu.name %>">
    </form>
    <a href="/hulu/<%= Hulu._id %>">Back</a>

<%- include('../partials/footer.ejs') %>