<%- include('../partials/header.ejs') %>

    <h1>Edit <%= Hulu.name %></h1>
    <form action="/hulu/<%= Hulu._id %>?_method=PUT" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= Hulu.name %>">
        <label for="synopsis">Synopsis</label>
        <input type="text" name="synopsis" id="synopsis" value="<%= Hulu.synopsis %>">
        <label for="img">Image</label>
        <input type="text" name="img" id="img" value="<%= Hulu.img %>">
        <label for="genre">Genre</label>
        <input type="text" name="genre" id="genre" value="<%= Hulu.genre %>">
        <input type="submit" value="Edit TV Show">
    </form>
    <a href="/hulu">Back</a>

<%- include('../partials/footer.ejs') %>